generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource storage {
  provider = "sqlite"
  url = "file:./db/storage.db"
}

model ScheduleItem {
  id      Int @id @default(autoincrement())
  startAt Int
  endAt   Int
  playlistIds String
}

model Classification {
  id     Int @id @default(autoincrement())
  name   String
  values String
}

model ClassificatedItem {
  filehash String @id
  json     String
}

model Playlists {
  id       Int @id @default(autoincrement())
  name     String
  type     String
  filehash String @default("none")
}

model ManualPlaylistItem {
  id         Int @id @default(autoincrement())
  playlistId Int
  order      Int
  filehash   String
}

model FSItem {
  filehash   String @id
  path       String
  name       String
  type       String
  id3Artist  String @default("unknown")
  id3Title   String @default("unknown")
  duration   Float  @default(0)
  trimStart  Float  @default(0)
  trimEnd    Float  @default(0)
}
